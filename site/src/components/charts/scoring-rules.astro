---
import * as Plot from "@observablehq/plot";
import { JSDOM } from "jsdom";
const { document } = new JSDOM().window;

interface Props {
  caption?: string;
}
let { caption } = Astro.props;

const xvals = Array.from({ length: 101 }, (_, i) => i / 100);
const points = xvals
  .map((x) => [
    { error: x, score_type: "Brier", score: x ** 2 },
    { error: x, score_type: "Log", score: Math.log(1 - x) },
    {
      error: x,
      score_type: "Spherical",
      score: (1 - x) / Math.sqrt(x ** 2 + (1 - x) ** 2),
    },
  ])
  .flat();
const points_drv = xvals
  .map((x) => [
    { error: x, score_type: "Brier", score: 2 * x },
    { error: x, score_type: "Log", score: -1 / (1 - x) },
    {
      error: x,
      score_type: "Spherical",
      score: -x / (2 * x ** 2 - 2 * x + 1) ** (3 / 2),
    },
  ])
  .flat();

// Generate the plot
const plot = Plot.plot({
  title: "Comparison of Scoring Methods",
  x: {
    label: "Error, percent",
    percent: true,
    domain: [0, 100],
  },
  y: {
    domain: [-2, 1],
    grid: true,
    label: "Score",
  },
  color: {
    label: "Score Type",
    legend: true,
  },
  marks: [
    Plot.line(points, {
      x: "error",
      y: "score",
      stroke: "score_type",
    }),
    Plot.ruleY([0]),
  ],
  document,
}).outerHTML;
const plot_drv = Plot.plot({
  title: "Derivative of Scoring Methods",
  x: {
    label: "Error, percent",
    percent: true,
    domain: [0, 100],
  },
  y: {
    domain: [-5, 2],
    grid: true,
    label: "Score Derivative",
  },
  color: {
    label: "Score Type",
    legend: true,
  },
  marks: [
    Plot.line(points_drv, {
      x: "error",
      y: "score",
      stroke: "score_type",
    }),
    Plot.ruleY([0]),
  ],
  document,
}).outerHTML;
---

<div
  class="bg-base-light [&_h2]:text-2xl text-crust rounded-md drop-shadow-sm p-4 overflow-x-auto"
>
  <div class="grid grid-cols-2 gap-2">
    <div>
      <Fragment set:html={plot} />
    </div>
    <div>
      <Fragment set:html={plot_drv} />
    </div>
  </div>
  <p class="text-xs">
    {caption}
  </p>
  <p class="text-xs">
    Source: <a href="https://brier.fyi">brier.fyi</a>
  </p>
</div>
