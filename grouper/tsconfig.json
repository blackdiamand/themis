{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "types/**/*", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@atoms/*": ["src/components/atoms/*"],
      "@components/*": ["src/components/*"],
      "@lib/*": ["src/lib/*"],
      "@icons/*": ["src/icons/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"],
      "@types": ["src/types/index.d.ts"]
    }
  }
}
