---
import Base from "@layouts/base.astro";
import IndexTable from "@components/IndexTable.svelte";

const headers = [
    { key: "slug", label: "Slug" },
    { key: "title", label: "Title" },
    { key: "category_name", label: "Category" },
];
---

<Base title="Questions">
    <div class="flex justify-between items-center p-4 m-2 border-b border-text">
        <h2 class="text-3xl font-bold text-text">All Questions</h2>
        <a
            href="/questions/edit"
            class="px-4 py-2 bg-crust text-text font-medium rounded-lg flex items-center"
        >
            Add New Question
        </a>
    </div>

    <div class="">
        <IndexTable headers={headers} endpoint="questions" client:load />
    </div>
</Base>
